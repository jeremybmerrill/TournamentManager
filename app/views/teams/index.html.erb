<h1>Competing teams</h1>
<br>
<table cellpadding="10px" class="table table-striped">
  <tr>
    <th>Team Name</th>
    <th>AMTA Team Num.</th>
    <th>Contact Email</th>
    <th>Contact Phone</th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= link_to team do %><%= team.school %> <%= team.teamabcd %><% end %></td>
    <td> <%= team.amtaid %> </td>
    <td><%= team.contactemail %></td>
    <td><%= team.contactphone %></td>
    <% #Show these only on proper auth. %>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path, :class => "btn" %>



